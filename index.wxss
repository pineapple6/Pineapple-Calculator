/* pages/index/index.wxss */
page {
  width: 100%;
  height: 100%;
}
.swp image{
  width:100%;
  height: 300rpx; 
  background:yellow;
}

.test-bg {
  position: fixed;
  bottom: 50rpx;
}
 
.screen {
  position: fixed;
  color: #000000;
  font-size: 30px;
  bottom: 870rpx;
  text-align: right;
  width: 95%;
  word-wrap: break-word;
}
 
.btnGroup {
  display: flex; /*弹性显示结构*/
  flex-direction: row;/*横向显示*/
}
 
.item {
  width: 185rpx;
  line-height: 160rpx;
  border-radius: 5%;
  text-align: center;
}

.image{
  width: 100rpx;
  height: 100rpx;
}
.orange {
  /* 前景色 */
  color: #000000;
  border: solid 1rpx #ffffff;
  /* 背景色 */
  background: #fa9600b0;
}
 
.white {
  /* 前景色 */
  color: #000000;
  border: solid 1rpx #000000;
  /* 背景色 */
  background: #ffffff;
}